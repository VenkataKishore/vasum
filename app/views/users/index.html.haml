%div{"data-role" => "page"}
  %div{"data-role" => "header"}
    %h1 Listing users
    = link_to "Import", imports_path, class: "ui-btn ui-btn-right"
    = link_to "Home", root_path, class: "ui-btn ui-btn-left"
  %div{"role" => "main", "class"=>"ui-content"}
    %form{class: "ui-filterable"}
      %input{id: "rich-autocomplete-input", "data-type" => "search", placeholder: "Search by name..."}
    %ul{"data-role" => "listview", "data-filter" => "true", "data-inset" => "true", "data-input" => "#rich-autocomplete-input"}
      - @users.each do |user|
        %li{"data-filtertext" => user.name}= link_to user.name, user

    %br

    %p= link_to 'New User', new_user_path, class: "ui-btn ui-icon-delete ui-btn-icon-left"
  %div{"data-role" => "footer"}
    %h1 Powered by Kishore  
